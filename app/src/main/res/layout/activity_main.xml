<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#F18800"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior=".lib.AppBarLayoutBehavior">

            <!-- SCROLL_OUT_1：设置scroll|snap，实现吸附效果，可滑出屏幕 -->
            <TextView
                android:id="@+id/tv_scroll_out_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#F18800"
                android:gravity="center"
                android:text="SCROLL_OUT_1"
                android:textColor="#FFFFFF"
                android:textSize="38sp"
                app:layout_scrollFlags="scroll|snap" />

            <!-- StickyLinearLayout：包含需要吸顶的View -->
            <com.gouqinglin.stickyheader.lib.StickyLinearLayout
                android:id="@+id/sticky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:stickyMode="multi"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!-- HEADER1：第一个吸顶View -->
                <TextView
                    android:id="@+id/tv_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#434152"
                    android:gravity="center"
                    android:text="HEADER1"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    app:layout_pin="true" />

                <!-- SCROLL_OUT_2：普通View，会随着滚动消失 -->
                <TextView
                    android:id="@+id/tv_scroll_out_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#0188F0"
                    android:gravity="center"
                    android:text="SCROLL_OUT_2"
                    android:textColor="#FFFFFF"
                    android:textSize="38sp" />

                <!-- HEADER2：第二个吸顶View -->
                <TextView
                    android:id="@+id/tv_header_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#9C27B0"
                    android:gravity="center"
                    android:text="HEADER2"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    app:layout_pin="true" />

                <!-- SCROLL_OUT_3：普通View，会随着滚动消失 -->
                <TextView
                    android:id="@+id/tv_scroll_out_3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FF5722"
                    android:gravity="center"
                    android:text="SCROLL_OUT_3"
                    android:textColor="#FFFFFF"
                    android:textSize="38sp" />

                <!-- HEADER3：第三个吸顶View -->
                <TextView
                    android:id="@+id/tv_header_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#673AB7"
                    android:gravity="center"
                    android:text="HEADER3"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    app:layout_pin="true" />

                <!-- SCROLL_OUT_4：普通View，会随着滚动消失 -->
                <TextView
                    android:id="@+id/tv_scroll_out_4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFC107"
                    android:gravity="center"
                    android:text="SCROLL_OUT_4"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />

                <!-- HEADER4：第四个吸顶View -->
                <TextView
                    android:id="@+id/tv_header_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#009688"
                    android:gravity="center"
                    android:text="HEADER4"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    app:layout_pin="true" />

            </com.gouqinglin.stickyheader.lib.StickyLinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- 主要内容区域：使用NestedScrollView或RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- 浮动的模式切换卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SINGLE"
                android:textSize="14sp"
                android:textColor="#666666" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MULTI"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>